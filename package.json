{
    "name": "commander-jsx",
    "version": "0.6.1",
    "license": "LGPL-3.0",
    "description": "Command-line Arguments Parser with JSX support",
    "keywords": [
        "command-line",
        "arguments",
        "parameter",
        "parser",
        "jsx",
        "typescript"
    ],
    "author": "shiy2008@gmail.com",
    "homepage": "https://tech-query.me/CommanderJSX/",
    "bugs": {
        "url": "https://github.com/TechQuery/CommanderJSX/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/CommanderJSX.git"
    },
    "main": "dist/index.js",
    "module": "source/index.ts",
    "types": "dist/index.d.ts",
    "devDependencies": {
        "@tech_query/node-toolkit": "^1.1.0",
        "@types/jest": "^27.4.0",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "lint-staged": "^12.1.5",
        "open-cli": "^7.0.1",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.4.0",
        "typedoc": "^0.22.10",
        "typescript": "^4.5.4"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true
    },
    "lint-staged": {
        "*.{md,json,yml,ts,tsx}": "prettier --write"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged && jest",
        "build": "rm -rf dist/ docs/  &&  tsc  &&  typedoc source/",
        "start": "typedoc  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
