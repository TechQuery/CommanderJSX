{
    "name": "commander-jsx",
    "version": "0.6.5",
    "license": "LGPL-3.0",
    "description": "Command-line Arguments Parser with JSX support",
    "keywords": [
        "command-line",
        "arguments",
        "parameter",
        "parser",
        "jsx",
        "typescript"
    ],
    "author": "shiy2008@gmail.com",
    "homepage": "https://tech-query.me/CommanderJSX/",
    "bugs": {
        "url": "https://github.com/TechQuery/CommanderJSX/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/CommanderJSX.git"
    },
    "main": "dist/index.js",
    "module": "source/index.ts",
    "types": "dist/index.d.ts",
    "dependencies": {
        "@tech_query/node-toolkit": "^1.2.1",
        "tslib": "^2.5.3"
    },
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@types/node": "^18.16.18",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.2",
        "open-cli": "^7.2.0",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typedoc": "^0.24.8",
        "typedoc-plugin-mdn-links": "^3.0.3",
        "typescript": "~5.1.3"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true
    },
    "lint-staged": {
        "*.{md,json,yml,ts,tsx}": "prettier --write"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged && jest",
        "build": "rm -rf dist/ docs/  &&  tsc  &&  typedoc source/",
        "start": "typedoc source/  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
