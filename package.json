{
    "name": "commander-jsx",
    "version": "0.7.0",
    "license": "LGPL-3.0",
    "description": "Command-line Arguments Parser with JSX support",
    "keywords": [
        "command-line",
        "arguments",
        "parameter",
        "parser",
        "jsx",
        "typescript"
    ],
    "author": "shiy2008@gmail.com",
    "homepage": "https://tech-query.me/CommanderJSX/",
    "bugs": {
        "url": "https://github.com/TechQuery/CommanderJSX/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/CommanderJSX.git"
    },
    "main": "dist/index.js",
    "module": "source/index.ts",
    "types": "dist/index.d.ts",
    "dependencies": {
        "@tech_query/node-toolkit": "^1.2.1",
        "tslib": "^2.7.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.13",
        "@types/node": "^20.16.11",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "open-cli": "^8.0.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typedoc": "^0.26.8",
        "typedoc-plugin-mdn-links": "^3.3.2",
        "typescript": "~5.6.3"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true
    },
    "lint-staged": {
        "*.{md,json,yml,ts,tsx}": "prettier --write"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged && jest",
        "parcel": "tsc  &&  cp dist/jsx-runtime.* .  &&  cp jsx-runtime.js jsx-dev-runtime.js  &&  cp jsx-runtime.d.ts jsx-dev-runtime.d.ts",
        "build": "rm -rf dist/ docs/  &&  npm run parcel  &&  typedoc source/",
        "start": "typedoc source/  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
