{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "../source",
        "strict": true,
        "target": "ES2017",
        "lib": ["ES2022", "DOM"],
        "declaration": true,
        "importHelpers": true,
        "outDir": "dist/"
    },
    "include": ["source/**/*.ts"],
    "typedocOptions": {
        "name": "CommanderJSX",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "entryPoints": ["source/dist/index.ts", "source/jsx-runtime.ts"],
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
