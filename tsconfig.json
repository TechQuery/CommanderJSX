{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "createCommand",
        "strict": true,
        "target": "ES2017",
        "lib": ["ES2019"],
        "declaration": true,
        "outDir": "dist/"
    },
    "include": ["source/*.ts"],
    "typedocOptions": {
        "name": "CommanderJSX",
        "mode": "file",
        "excludeExternals": true,
        "excludeNotExported": true,
        "readme": "./ReadMe.md",
        "out": "docs/"
    }
}
